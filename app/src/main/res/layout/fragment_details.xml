<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".ui.details.DetailsFragment">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher_round"
        tools:layout_height="300dp"
        tools:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_view_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Restaurant"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_price"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Address"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_restaurant_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Price"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_address"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"

        tools:text="City"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_state"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Area"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_postal_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_area"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Postal code"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_postal_code"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Phone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_phone"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Coordinates"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_coordinates"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Webpage"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_mobile_webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_webpage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="Mobile webpage"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_city"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="State"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/image_view_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mobile_webpage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:src="@drawable/fav_icon_selector"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/image_view_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mobile_webpage"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_toEndOf="@+id/image_view_favorite"
        android:layout_toRightOf="@+id/image_view_favorite"
        android:src="@drawable/ic_baseline_directions_24"
        app:tint="@android:color/white" />


    <ImageView
        android:id="@+id/image_view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mobile_webpage"
        android:layout_marginStart="63dp"

        android:layout_marginLeft="63dp"
        android:layout_toEndOf="@+id/image_view_direction"
        android:layout_toRightOf="@+id/image_view_direction"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/image_view_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mobile_webpage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"

        android:layout_marginLeft="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_toEndOf="@+id/image_view_phone"
        android:layout_toRightOf="@+id/image_view_phone"
        android:src="@drawable/ic_baseline_other_24"
        app:tint="@android:color/white" />
</RelativeLayout>